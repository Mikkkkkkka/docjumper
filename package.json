{
  "name": "docjumper",
  "displayName": "DocJumper",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "DocJumper",
      "properties": {
        "docjumper.defaultSetDocument": {
          "type": "string",
          "default": "\\docs\\README.md",
          "description": "The document that is set by default"
        },
        "docjumper.changeSetDocumentOnShowDocumentCommand": {
          "type": "boolean",
          "default": true,
          "description": "Set active document before Show Set Document command."
        }
      }
    },
    "commands": [
      {
        "category": "DocJumper",
        "command": "docjumper.setDocument",
        "title": "Set Document"
      },
      {
        "category": "DocJumper",
        "command": "docjumper.showDocument",
        "title": "Show Set Document"
      },
      {
        "category": "DocJumper",
        "command": "docjumper.resetDocument",
        "title": "Reset Document to default"
      }
    ],
    "keybindings": [
      {
        "command": "docjumper.showDocument",
        "key": "alt+q"
      },
      {
        "command": "docjumper.setDocument",
        "key": "alt+shift+q"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
    "esbuild": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "test-compile": "tsc -p ./",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.3",
    "@types/node": "18.x",
    "@types/vscode": "^1.84.0",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "@vscode/test-electron": "^2.3.6",
    "esbuild": "^0.19.8",
    "eslint": "^8.52.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.2.2"
  }
}